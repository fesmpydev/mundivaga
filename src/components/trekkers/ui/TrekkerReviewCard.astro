---
export interface Props {
  photo: string;
  name: string;
  country: string;
  date: string;
  score: number;
  title: string;
  message: string;
}

const { photo, name, country, date, score, title, message } = Astro.props;
---

<article
  class="flex-[0_0_90%] md:flex-[0_0_50%] rounded-4xl shadow-xl p-4 lg:flex-[0_0_100%]"
>
  <header class="flex items-center gap-1">
    {
      Array.from({ length: score }).map((_) => (
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="size-5 text-orange-500"
        >
          <path
            fill-rule="evenodd"
            d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
            clip-rule="evenodd"
          />
        </svg>
      ))
    }
  </header>

  <main>
    <h2 class="mt-2 font-bold text-xl line-clamp-1">{title}</h2>
    <p class="text-base font-normal line-clamp-3">{message}</p>

    <section class="mt-3">
      <article class="flex gap-2">
        <img
          src={photo}
          alt={`Imagen de ${name}`}
          class="w-8 h-8 object-cover rounded-full"
        />

        <div>
          <h2 class="text-xl font-bold">{name}</h2>
          <p class="text-xs">{country}</p>
          <time datetime={date} class="text-gray-500 text-xs">{date}</time>
        </div>
      </article>
    </section>
  </main>
</article>
